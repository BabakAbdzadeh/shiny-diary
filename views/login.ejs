<body>




  <div class="container-md log-in-container">
    <form method="post" action="/">
      <!-- Login -->
      <div class="mb-2">
        <input type="username" name="username" class="form-control text-light" style="background-color:#1C2333" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Email or Username">
      </div>
      <div class="mb-2">
        <input type="password" name="password" class="form-control text-light" style="background-color:#1C2333" id="exampleInputPassword1" placeholder="Password">
      </div>

      <button type="submit" class="btn btn-primary mb-3 full-width" style="display: block">Login</button>

      <!-- Register -->
      <p class="mb-1" style="display:inline-block">
        Don't have an account yet?
      </p>
      <a href="/register">Sign up</a>
      <a href="#" style="display: block">Frogot password?</a>
      <hr>
      <!-- Google signIn -->
      <div class="row justify-content-center mb-1" >
        <div class="col">
          <a class="btn btn-outline-danger btn-sm btn-block" style="background-color:#1C2333, color: red" href="/users/googleauth" role="button" style="text-transform:none">
            <img  width="20px" style="margin-bottom:3px; margin-right:10px" alt="Google sign-in" src="https://upload.wikimedia.org/wikipedia/commons/thumb/5/53/Google_%22G%22_Logo.svg/512px-Google_%22G%22_Logo.svg.png" />
            Continue with Google
          </a>
        </div>
      </div>
        <!-- Facebook signIn -->
      <div class="row justify-content-center">
        <div class="col">
          <a class="btn btn-outline-primary btn-sm btn-block" style="background-color:#1C2333, color: blue" href="/users/googleauth" role="button" style="text-transform:none">
            <img width="20px" style="margin-bottom:3px; margin-right:5px" alt="Google sign-in" src="https://upload.wikimedia.org/wikipedia/commons/thumb/b/b8/2021_Facebook_icon.svg/1024px-2021_Facebook_icon.svg.png" />
            Continue with Facebook
          </a>
        </div>
      </div>


    </form>

  </div>




